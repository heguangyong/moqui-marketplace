<?xml version="1.0" encoding="UTF-8"?>
<moqui-conf xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/moqui-conf-3.xsd">

    <!-- Marketplace 组件配置 -->

    <!-- 最小匹配分数阈值（0-1） -->
    <default-property name="marketplace.matching.min.score" value="0.6"/>

    <!-- 最大匹配结果数量 -->
    <default-property name="marketplace.matching.max.results" value="10"/>

    <!-- 最大配送距离（公里） -->
    <default-property name="marketplace.geo.max.distance" value="5.0"/>

    <!-- 供需信息默认有效期（小时） -->
    <default-property name="marketplace.listing.expire.hours" value="48"/>

    <!-- 通知渠道：ROCKETCHAT, SMS, EMAIL -->
    <default-property name="marketplace.notification.channel" value="ROCKETCHAT"/>

    <!-- AI 相关配置 -->
    <!-- AI提供商：OPENAI, CLAUDE, OLLAMA -->
    <default-property name="marketplace.ai.provider" value="OPENAI"/>

    <!-- AI模型名称（根据AI提供商调整） -->
    <default-property name="marketplace.ai.model" value="gpt-4o-mini"/>

    <!-- AI提供商基础API地址 -->
    <default-property name="marketplace.ai.api.base" value="https://api.tabcode.cc/openai"/>

    <!-- AI提供商API密钥，生产环境请使用安全的密钥管理方案 -->
    <default-property name="marketplace.ai.api.key" value="sk-user-b068399a6e6d4bd97d6af72e"/>

    <!-- 是否使用AI生成匹配理由 -->
    <default-property name="marketplace.ai.enable.match.reason" value="true"/>

    <!-- 是否使用AI提取标签 -->
    <default-property name="marketplace.ai.enable.tag.extraction" value="true"/>

    <!-- Rocket.Chat 集成配置 -->
    <!-- Rocket.Chat服务器地址 -->
    <default-property name="rocketchat.server.url" value="http://localhost:4000"/>

    <!-- Rocket.Chat Bot用户名 -->
    <default-property name="rocketchat.bot.username" value="marketplace-bot"/>

    <!-- Rocket.Chat Bot密码 -->
    <default-property name="rocketchat.bot.password" value=""/>

    <!-- Rocket.Chat Webhook Token -->
    <default-property name="rocketchat.webhook.token" value=""/>

    <!-- MCP Server 配置 -->
    <!-- MCP Server主机地址 -->
    <default-property name="mcp.server.host" value="localhost"/>

    <!-- MCP Server端口 -->
    <default-property name="mcp.server.port" value="3001"/>

    <!-- 是否启用MCP Server -->
    <default-property name="mcp.server.enable" value="true"/>

</moqui-conf>
